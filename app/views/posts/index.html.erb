<div>
  <div class='user_info'>
      <img src="<%= @user.photo%>" alt="<%= @user.name%>" class='user_image'>
      <div class='user_details'>
        <h2>
          <%= @user.name%>
        </h2>
        <h4>
          <%= @user.posts_counter%>
        </h4>
      </div>
  </div>
  <div class='posts'>
      <% @posts.each do |post|%>
          <div class='posts_comments'>
            <%= link_to user_post_path(@user,post) do %>
              <div class='post'>
                <h4 class='post_title'>
                  <%= post.title %>
                </h4>
                <p class='post_body'>
                  <%= post.body %>
                </p>
              </div>
            <% end %>
            <% if post.comments.count > 0 %>
              <span class='comments_likes'>
                  <% post.comments.each do |comment| %>
                        <%= comment.author.name%>:
                        <%= comment.body %>
                      <% end %>
              </span>
            <% end %>
          </div>
      <% end %>
      <div class="flickr_pagination">
        <%= will_paginate @posts, :container => false %>
      </div>
  </div>
</div>