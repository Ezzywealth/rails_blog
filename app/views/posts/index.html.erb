
<div>
  <div class='user_info'>
      <img src="<%= @user.photo%>" alt="<%= @user.name%>" class='user_image'>
      <div class='user_details'>
        <h2>
          <%= @user.name%>
        </h2>
        <h4>
          <%= @user.posts_counter%>
        </h4>
      </div>
  </div>
  <div class='posts'>
     <%= will_paginate @posts %>
      <% @posts.each do |post|%>
      <div class='post'>
        <h4 class='post_title'>
          <%= post.title %>
        </h4>
        <p class='post_body'>
          <%= post.body %>
        </p>
      </div>
      <% end %>
      </div>
    </div>
      <%= will_paginate @posts %>
</div>